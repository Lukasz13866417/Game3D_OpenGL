<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.game3d_opengl">

    <!-- Require OpenGL ES 2.0 support -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Optional: Lock orientation if your game doesn't support both -->
    <!-- <uses-permission android:name="android.permission.WAKE_LOCK" /> -->
    <!-- (Optional if you're preventing screen sleep in code) -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <activity
            android:name=".OpenGLES20Activity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:exported="true"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen">

        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>

    </activity>

</application></manifest>
